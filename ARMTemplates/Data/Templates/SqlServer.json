{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sqlServerName": {
            "type": "string"
        },
        "sqlAdminUsername": {
            "type": "securestring"
        },
        "sqlAdminPassword": {
            "type": "securestring"
        },
        "sharedResourceGroupName": {
            "type": "string"
        },
        "bluePublicIpName": {
            "type": "string"
        },
        "greenPublicIpName": {
            "type": "string"
        }
    },
    "resources": [{
            "apiVersion": "2014-04-01-preview",
            "type": "Microsoft.Sql/servers",
            "name": "[parameters('sqlServerName')]",
            "location": "[resourceGroup().location]",
            "kind": "v12.0",
            "properties": {
                "administratorLogin": "[parameters('sqlAdminUsername')]",
                "administratorLoginPassword": "[parameters('sqlAdminPassword')]",
                "version": "12.0"
            }
        },
        {
            "type": "Microsoft.Sql/servers/firewallrules",
            "apiVersion": "2014-04-01-preview",
            "location": "[resourceGroup().location]",
            "name": "[concat(parameters('sqlServerName'), '/Blue')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
            ],
            "properties": {
                "endIpAddress": "[reference(resourceId(parameters('sharedResourceGroupName'), 'Microsoft.Network/publicIPAddresses', parameters('bluePublicIpName'))).IpAddress]",
                "startIpAddress": "[reference(resourceId(parameters('sharedResourceGroupName'), 'Microsoft.Network/publicIPAddresses', parameters('bluePublicIpName'))).IpAddress]"
            }
        },
        {
            "type": "Microsoft.Sql/servers/firewallrules",
            "apiVersion": "2014-04-01-preview",
            "location": "[resourceGroup().location]",
            "name": "[concat(parameters('sqlServerName'), '/Green')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
            ],
            "properties": {
                "endIpAddress": "[reference(resourceId(parameters('sharedResourceGroupName'), 'Microsoft.Network/publicIPAddresses', parameters('greenPublicIpName'))).IpAddress]",
                "startIpAddress": "[reference(resourceId(parameters('sharedResourceGroupName'), 'Microsoft.Network/publicIPAddresses', parameters('greenPublicIpName'))).IpAddress]"
            }
        },
        {
            "type": "Microsoft.Sql/servers/firewallrules",
            "apiVersion": "2014-04-01-preview",
            "location": "[resourceGroup().location]",
            "name": "[concat(parameters('sqlServerName'), '/Home')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
            ],
            "properties": {
                "endIpAddress": "82.69.58.153",
                "startIpAddress": "82.69.58.153"
            }
        }
    ]
}