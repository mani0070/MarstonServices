{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "secondaryName": {
            "allowedValues": [
                "Blue",
                "Green"
            ],
            "type": "string"
        },
        "shortName": {
            "type": "string"
        }
    },
    "variables": {
        "trafficManagerName": "[concat(parameters('shortName'), 'ServicesMarstonMe')]",
        "dnsZoneName": "services.marston.me",
        "trafficManagerRelativeName": "[concat(toLower(parameters('shortName')), replace(variables('dnsZoneName'), '.', ''))]",
        "BluePrimaryName": "Green",
        "GreenPrimaryName": "Blue",
        "primaryName": "[variables(concat(parameters('secondaryName'), 'PrimaryName'))]",
        "primaryPublicIpName": "[concat('ServicesPIP', variables('primaryName'))]",
        "primaryPublicIpFqdn": "[concat(toLower(variables('primaryName')), '.', variables('dnsZoneName'))]",
        "secondaryPublicIpFqdn": "[concat(toLower(parameters('secondaryName')), '.', variables('dnsZoneName'))]",
        "secondaryPublicIpName": "[concat('ServicesPIP', parameters('secondaryName'))]"
    },
    "resources": [{
        "type": "Microsoft.Network/trafficManagerProfiles",
        "name": "[variables('trafficManagerName')]",
        "apiVersion": "2015-11-01",
        "location": "global",
        "properties": {
            "profileStatus": "Enabled",
            "trafficRoutingMethod": "Priority",
            "dnsConfig": {
                "relativeName": "[variables('trafficManagerRelativeName')]",
                "ttl": 30
            },
            "monitorConfig": {
                "protocol": "HTTP",
                "port": 80,
                "path": "/healthcheck.txt"
            },
            "endpoints": [{
                    "name": "[variables('primaryName')]",
                    "type": "Microsoft.Network/trafficManagerProfiles/externalEndpoints",
                    "properties": {
                        "target": "[variables('primaryPublicIpFqdn')]",
                        "endpointLocation": "[resourceGroup().location]",
                        "endpointStatus": "Enabled",
                        "priority": "10"
                    }
                },
                {
                    "name": "[parameters('secondaryName')]",
                    "type": "Microsoft.Network/trafficManagerProfiles/externalEndpoints",
                    "properties": {
                        "target": "[variables('secondaryPublicIpFqdn')]",
                        "endpointLocation": "[resourceGroup().location]",
                        "endpointStatus": "Disabled",
                        "priority": "20"
                    }
                }
            ]
        }
    }]
}