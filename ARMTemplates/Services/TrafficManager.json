{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "trafficManagerName": {
            "type": "string"
        },
        "trafficManagerRelativeName": {
            "type": "string"
        },
        "bluePublicIpResourceId": {
            "type": "string"
        },
        "bluePublicIpFqdn": {
            "type": "string"
        },
        "greenPublicIpResourceId": {
            "type": "string"
        },
        "greenPublicIpFqdn": {
            "type": "string"
        }
    },
    "resources": [{
        "type": "Microsoft.Network/trafficManagerProfiles",
        "name": "[parameters('trafficManagerName')]",
        "apiVersion": "2015-11-01",
        "location": "global",
        "properties": {
            "profileStatus": "Enabled",
            "trafficRoutingMethod": "Priority",
            "dnsConfig": {
                "relativeName": "[parameters('trafficManagerRelativeName')]",
                "fqdn": "[concat(parameters('trafficManagerRelativeName'),'.trafficmanager.net')]",
                "ttl": 30
            },
            "monitorConfig": {
                "protocol": "HTTPS",
                "port": 443,
                "path": "/"
            },
            "endpoints": [{
                    "name": "Blue",
                    "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                    "properties": {
                        "endpointStatus": "Disabled",
                        "targetResourceId": "[parameters('bluePublicIpResourceId')]",
                        "target": "[parameters('bluePublicIpFqdn')]",
                        "priority": 1,
                        "endpointLocation": "[resourceGroup().location]"
                    }
                },{
                    "name": "Green",
                    "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                    "properties": {
                        "endpointStatus": "Disabled",
                        "targetResourceId": "[parameters('greenPublicIpResourceId')]",
                        "target": "[parameters('greenPublicIpFqdn')]",
                        "priority": 2,
                        "endpointLocation": "[resourceGroup().location]"
                    }
                }]
        }
    }]
}