{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "trafficManagerName": {
            "type": "string"
        },
        "trafficManagerRelativeName": {
            "type": "string"
        },
        "blueStatus": {
            "type": "string",
            "allowedValues": [
                "Enabled",
                "Disabled"
            ]
        },
        "bluePriority": {
            "type": "string",
            "allowedValues": [
                "1",
                "2"
            ]
        },
        "greenStatus": {
            "type": "string",
            "allowedValues": [
                "Enabled",
                "Disabled"
            ]
        },
        "greenPriority": {
            "type": "string",
            "allowedValues": [
                "1",
                "2"
            ]
        }
    },
    "resources": [{
        "type": "Microsoft.Network/trafficManagerProfiles",
        "name": "[parameters('trafficManagerName')]",
        "apiVersion": "2015-11-01",
        "location": "global",
        "properties": {
            "profileStatus": "Enabled",
            "trafficRoutingMethod": "Priority",
            "dnsConfig": {
                "relativeName": "[parameters('trafficManagerRelativeName')]",
                "fqdn": "[concat(parameters('trafficManagerRelativeName'),'.trafficmanager.net')]",
                "ttl": 30
            },
            "monitorConfig": {
                "protocol": "HTTPS",
                "port": 443,
                "path": "/"
            },
            "endpoints": [{
                    "name": "Blue",
                    "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                    "properties": {
                        "endpointStatus": "[parameters('blueStatus')]",
                        "targetResourceId": "[resourceId('Microsoft.Network/publicIPAddresses', 'ServicesPIPBlue')]",
                        "target": "blue.nodes.services.marston.me",
                        "priority": "[parameters('bluePriority')]",
                        "endpointLocation": "[resourceGroup().location]"
                    }
                },{
                    "name": "Green",
                    "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                    "properties": {
                        "endpointStatus": "[parameters('greenStatus')]",
                        "targetResourceId": "[resourceId('Microsoft.Network/publicIPAddresses', 'ServicesPIPGreen')]",
                        "target": "green.nodes.services.marston.me",
                        "priority": "[parameters('greenPriority')]",
                        "endpointLocation": "[resourceGroup().location]"
                    }
                }]
        }
    }]
}