{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "zoneName": {
            "type": "string",
            "defaultValue": "nodes.services.marston.me"
        },
        "blueIpAddress": {
            "type": "string"
        },
        "greenIpAddress": {
            "type": "string"
        }
    },
    "resources": [{
            "type": "Microsoft.Network/dnszones",
            "name": "[parameters('zoneName')]",
            "apiVersion": "2016-04-01",
            "location": "global"
        },
        {
            "type": "Microsoft.Network/dnszones/A",
            "name": "[concat(parameters('zoneName'), '/blue')]",
            "apiVersion": "2016-04-01",
            "properties": {
                "TTL": 3600,
                "ARecords": [{
                    "ipv4Address": "[parameters('blueIpAddress')]"
                }]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/dnszones', parameters('zoneName'))]"
            ]
        },
        {
            "type": "Microsoft.Network/dnszones/A",
            "name": "[concat(parameters('zoneName'), '/green')]",
            "apiVersion": "2016-04-01",
            "properties": {
                "TTL": 3600,
                "ARecords": [{
                    "ipv4Address": "[parameters('greenIpAddress')]"
                }]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/dnszones', parameters('zoneName'))]"
            ]
        }
    ],
    "outputs": {
        "nameserver1": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/dnszones', parameters('zoneName'))).properties.nameServers[0]]"
        },
        "nameserver2": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/dnszones', parameters('zoneName'))).properties.nameServers[1]]"
        },
        "nameserver3": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/dnszones', parameters('zoneName'))).properties.nameServers[2]]"
        },
        "nameserver4": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/dnszones', parameters('zoneName'))).properties.nameServers[3]]"
        }
    }
}